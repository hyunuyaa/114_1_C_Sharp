using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.IO;
using System.Linq;
using System.Reflection.Emit;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace page_131_ex3
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            // 設定表單與所有控制項字型為「微軟正黑體」18pt
            var uiFont = new Font("微軟正黑體", 18F, FontStyle.Regular, GraphicsUnit.Point, ((byte)(136)));
            this.Font = uiFont;
            ApplyFontToControls(this.Controls, uiFont);

            // 圖片檔名清單
            string[] files = new[] { "One.bmp", "Two.bmp", "Three.bmp", "Four.bmp", "Five.bmp" };

            // 預設相對路徑（專案啟動目錄下）
            string imagesDir = Path.Combine(Application.StartupPath, "Images", "Cards", "Poker Large");

            // 如果預設路徑沒有找到，讓使用者選擇實際資料夾
            bool needPrompt = false;
            foreach (var f in files)
            {
                if (!File.Exists(Path.Combine(imagesDir, f)))
                {
                    needPrompt = true;
                    break;
                }
            }

            if (needPrompt)
            {
                using (var fbd = new FolderBrowserDialog())
                {
                    fbd.Description = "請選擇存放撲克牌圖片的資料夾 (例如包含 One.bmp 等檔案)";
                    fbd.ShowNewFolderButton = false;
                    if (fbd.ShowDialog() == DialogResult.OK)
                    {
                        imagesDir = fbd.SelectedPath;
                    }
                    else
                    {
                        label1.Text = "未指定圖片資料夾。請放置圖片或重新啟動並指定資料夾。";
                        return;
                    }
                }
            }

            // 嘗試載入圖片，若有例外則顯示錯誤在 label1
            try
            {
                pictureBox1.Image = Image.FromFile(Path.Combine(imagesDir, files[0]));
                pictureBox2.Image = Image.FromFile(Path.Combine(imagesDir, files[1]));
                pictureBox3.Image = Image.FromFile(Path.Combine(imagesDir, files[2]));
                pictureBox4.Image = Image.FromFile(Path.Combine(imagesDir, files[3]));
                pictureBox5.Image = Image.FromFile(Path.Combine(imagesDir, files[4]));

                // 維持圖片大小比例
                pictureBox1.SizeMode = PictureBoxSizeMode.StretchImage;
                pictureBox2.SizeMode = PictureBoxSizeMode.StretchImage;
                pictureBox3.SizeMode = PictureBoxSizeMode.StretchImage;
                pictureBox4.SizeMode = PictureBoxSizeMode.StretchImage;
                pictureBox5.SizeMode = PictureBoxSizeMode.StretchImage;

                label1.Text = "狀態：圖片已載入";
            }
            catch (Exception ex)
            {
                label1.Text = "載入圖片失敗：" + ex.Message;
            }

            // 將已知的文字改為繁體中文（若需要更多文字翻譯，可在此新增）
            this.Text = "表單1";
            if (label1 != null && string.IsNullOrWhiteSpace(label1.Text)) label1.Text = "狀態：尚未點選"; // 初始可以設為空或你想要的中文預設
        }

        private void pictureBox_Click(object sender, EventArgs e)
        {
            PictureBox clickedCard = sender as PictureBox;

            if (clickedCard != null && clickedCard.ImageLocation != null)
            {
                string fileName = System.IO.Path.GetFileNameWithoutExtension(clickedCard.ImageLocation);
                label1.Text = "您點擊了：" + fileName;
            }
            else if (clickedCard != null && clickedCard.Image != null)
            {
                // 當 ImageLocation 不可用時，顯示 PictureBox 名稱或索引
                label1.Text = "您點擊了：" + clickedCard.Name;
            }
        }

        // 遞迴套用字型到所有控制項
        private void ApplyFontToControls(Control.ControlCollection controls, Font font)
        {
            foreach (Control c in controls)
            {
                c.Font = font;
                if (c.HasChildren)
                {
                    ApplyFontToControls(c.Controls, font);
                }
            }
        }
    }
}
