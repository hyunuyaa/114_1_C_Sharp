using System;
using System.Drawing;
using System.Windows.Forms;

namespace WindowsFormsApp1
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            // Paths to images (update these to your actual locations if needed)
            string p1 = @"Images\Cards\Poker Large\Ace_Spades";
            string p2 = @"Images\Cards\Poker Large\2_Clubs";
            string p3 = @"Images\Cards\Poker Large\Queen_Hearts";
            string p4 = @"Images\Cards\Poker Large\10_Diamonds";
            string p5 = @"Images\Cards\Poker Large\King_Clubs";

            // Assign images. We store the path in Tag so the click handler can always determine the file name
            AssignImage(pictureBox1, p1);
            AssignImage(pictureBox2, p2);
            AssignImage(pictureBox3, p3);
            AssignImage(pictureBox4, p4);
            AssignImage(pictureBox5, p5);

            // Fit images nicely
            pictureBox1.SizeMode = PictureBoxSizeMode.StretchImage;
            pictureBox2.SizeMode = PictureBoxSizeMode.StretchImage;
            pictureBox3.SizeMode = PictureBoxSizeMode.StretchImage;
            pictureBox4.SizeMode = PictureBoxSizeMode.StretchImage;
            pictureBox5.SizeMode = PictureBoxSizeMode.StretchImage;
        }

        private void AssignImage(PictureBox pb, string path)
        {
            if (pb == null) return;
            pb.Tag = path;
            try
            {
                // Try to load directly (this will lock the file until disposed)
                pb.Image = Image.FromFile(path);
            }
            catch
            {
                // If loading fails (missing file or other), fall back to ImageLocation so WinForms can try to load it
                pb.ImageLocation = path;
                try { pb.LoadAsync(); } catch { /* ignore */ }
            }
        }

        private void pictureBox_Click(object sender, EventArgs e)
        {
            var clickedBox = sender as PictureBox;
            if (clickedBox == null) return;

            // Prefer ImageLocation (if used), otherwise use Tag which we set to the original path
            string path = clickedBox.ImageLocation ?? (clickedBox.Tag as string);
            if (!string.IsNullOrEmpty(path))
            {
                string cardName = System.IO.Path.GetFileNameWithoutExtension(path);
                label1.Text = "You clicked: " + cardName.Replace('_', ' ');
                return;
            }

            if (clickedBox.Image != null)
            {
                label1.Text = "You clicked an image";
            }
        }
    }
}
