using System;
using System.Windows.Forms;

namespace WindowsFormsApp1
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            // Set image locations for each PictureBox (relative to executable). Update paths as needed.
            pictureBox1.ImageLocation = @"Images\Cards\Poker Large\Ace_of_Spades.jpg";
            pictureBox2.ImageLocation = @"Images\Cards\Poker Large\Two_of_Clubs.jpg";
            pictureBox3.ImageLocation = @"Images\Cards\Poker Large\Queen_of_Hearts.jpg";
            pictureBox4.ImageLocation = @"Images\Cards\Poker Large\Ten_of_Diamonds.jpg";
            pictureBox5.ImageLocation = @"Images\Cards\Poker Large\King_of_Clubs.jpg";

            // Let PictureBox load the images asynchronously
            pictureBox1.LoadAsync();
            pictureBox2.LoadAsync();
            pictureBox3.LoadAsync();
            pictureBox4.LoadAsync();
            pictureBox5.LoadAsync();

            // Fit image nicely inside box
            pictureBox1.SizeMode = PictureBoxSizeMode.StretchImage;
            pictureBox2.SizeMode = PictureBoxSizeMode.StretchImage;
            pictureBox3.SizeMode = PictureBoxSizeMode.StretchImage;
            pictureBox4.SizeMode = PictureBoxSizeMode.StretchImage;
            pictureBox5.SizeMode = PictureBoxSizeMode.StretchImage;
        }

        private void pictureBox_Click(object sender, EventArgs e)
        {
            PictureBox clickedBox = sender as PictureBox;

            if (clickedBox != null)
            {
                string path = clickedBox.ImageLocation ?? clickedBox.Tag as string;
                if (!string.IsNullOrEmpty(path))
                {
                    string cardName = System.IO.Path.GetFileNameWithoutExtension(path);
                    label1.Text = "You clicked: " + cardName.Replace('_', ' ');
                }
                else if (clickedBox.Image != null)
                {
                    label1.Text = "You clicked an image";
                }
            }
        }
    }
}
